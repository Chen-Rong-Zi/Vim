


" return to the file .vimrc
nmap Tv :e ~/.vimrc<Enter>

" number in front of lines
set nonumber
set norelativenumber
set nowrap
set ignorecase
set wildmenu
set showcmd
set cursorline
set encoding=utf-8
set scrolloff=7

" Shortcuts
imap jk <esc>

cmap 1 !
nmap w <C-w>
nmap <space> :
nmap s m
nmap 7 5j
nmap 8 5k

"  <tab> and <space> visualised
set list
set listchars=tab:>-,trail:-

" Fold paragraph
set foldmethod=indent
nmap ff za
nmap fk zm
nmap fj zr

" Tab methods
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4

" Spell Check
nmap sc :set spell!<Enter>
imap <S-s><S-C> <C-x>s

" return to the Current Directory
nmap Te :e.<Enter>

" Shortcuts switched
nmap <space> :
nmap s m
nmap 7 5j
nmap 8 5k

" Syntax Highlight
syntax on

" Color Scheme | Font
color Tomorrow-Night-Eighties
set guifont:Menlo:h21

" 高亮 显示
" set hlsearch
set incsearch

" Tab Site
nmap tt :tabe<Enter>
nmap th :-tabnext<Enter>
nmap tl :+tabnext<Enter>

" Screen Create
nmap sk :set splitbelow<Enter>:split<Enter>
nmap sj :set nosplitbelow<Enter>:split<Enter>
nmap sh :set splitright<Enter>:vsplit<Enter>
nmap sl :set nosplitright<Enter>:vsplit<Enter>

" Screen Switch
nmap K <C-w>K
nmap J <C-w>J
nmap H <C-w>H
nmap L <C-w>L

" Screen Size
nmap _ :resize -5<Enter>
nmap + :resize +5<Enter>
nmap - :vertical resize -5<Enter>
nmap = :vertical resize +5<Enter>

" 保存
nmap S :w<Enter>

" Auto Complete the () or <>
imap ( ()<left>
imap < <><left>

"HighLight
highlight MyColor guifg=#6699cc guibg=#2d2d2d
" syntax match Identifier /\s+\s/
" syntax match Identifier /\s=\s/
" syntax match Identifier /\s*\s/
" syntax match Identifier /\s\/\s/
" syntax match Identifier /\s+=\s/
" syntax match Identifier /\s-=\s/
" syntax match Identifier /\s*=\s/
" syntax match Identifier /\s\/=\s/
" syntax match Identifier /\w(,)\s/
" syntax match Funvtion /\w*(/
" syntax match Funvtion /)/
